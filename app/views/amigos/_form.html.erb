<%= simple_form_for @amigo, { :role => 'form' } do |f| %>
  <div class="form-group">
    <label for="nome">Nome</label>
    <%= f.input :nome, :required => false, placeholder: true, :class => "form-control", :id => "nome"  %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Digite o email">
  </div>
  <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="telefone" class="form-control" id="telefone" placeholder="Digite o telefone">
  </div>
<% end %>